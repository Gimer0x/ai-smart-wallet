# Circle API Configuration
# Get your API key from: https://console.circle.com/
CIRCLE_API_KEY=your_circle_api_key_here

# Entity Secret (32-byte hex string)
# Generate using: npm run generate:entity-secret
# Or use the Circle SDK: generateEntitySecret()
CIRCLE_ENTITY_SECRET=your_32_byte_hex_entity_secret_here

# Groq AI Configuration
# Get your API key from: https://console.groq.com/
GROQ_API_KEY=your_groq_api_key_here

# API Security
# Generate a secure random string for API key authentication
API_KEY_SECRET=your_api_key_secret_here

# Wallet Configuration
# Primary wallet ID - used for purchases and AI agent operations
PRIMARY_WALLET_ID=your_primary_wallet_id_here

# Marketplace Configuration
# Wallet address where marketplace payments are sent
MARKETPLACE_WALLET_ADDRESS=your_marketplace_wallet_address_here

# Server Configuration (optional)
# Default: 3001
PORT=3001
